<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    tools:context="com.edm.josue.catalogoquaker.Reasons">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="1024dp"
        android:layout_height="768dp"/>
        <!--app:srcCompat="@drawable/razones"-->

    <VideoView
        android:id="@+id/videoReasons"
        android:layout_width="1024dp"
        android:layout_height="768dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBenefits"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="55dp"
        android:background="@android:drawable/btn_default"
        android:fontFamily="@font/kgallofme"
        android:text="BENEFICIOS"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="78.5dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/logoqkr"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
